{{#extend "scaffold" }}

{{#content "body"}}
    <div class="post">
    <div class="head">
        <div class="about-me">
            <a href="https://about.me/guymograbi">Guy Mograbi</a>
            <div class="links">
                <a href="https://twitter.com/guymograbi">Twitter</a>
                <a href="https://github.com/guymograbi">Github</a>
            </div>
        </div>
    </div>
    <a href="/"><div class="logo"></div></a>
    <div class="content">
        <div>
            {{#if previous.path}}
                <a href="{{previous.path}}" title="{{previous.title}}"> &#8592;  Previous</a>
            {{/if}}
            {{#if next.path}}
                <a style="float:right" href="{{next.path}}" title="{{next.title}}">Next &#8594;</a>
            {{/if}}
        </div>
        <h1 class="post-title">{{title}}</h1>
        <h3>{{moment published 'DD MMM YYYY' }}<span class="gitter-link"><a href="https://gitter.im/GuyMograbi/mograblog?utm_source=badge&utm_medium=badge&utm_campaign=pr-badge"><img src="https://badges.gitter.im/GuyMograbi/mograblog.svg"/></a></span></h3>
        
        {{{hbs contents}}}

        <div>
            {{#if previous.path}}
            <a href="{{previous.path}}" title="{{previous.title}}"> &#8592;  Previous</a>
            {{/if}}
            {{#if next.path}}
            <a style="float:right" href="{{next.path}}" title="{{next.title}}">Next &#8594;</a>
            {{/if}}
        </div>
        <div style="height:100px" class="push"></div>
    </div>
    
