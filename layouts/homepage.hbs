{{#extend "scaffold"}}
{{#content "body"}}
    <div class="homepage">
    <div class="head">
        <div class="about-me">
            <a href="https://about.me/guymograbi">Guy Mograbi</a>
            <div class="links">
                <a href="https://twitter.com/guymograbi">Twitter</a>
                <a href="https://github.com/guymograbi">Github</a>
            </div>
        </div>
    </div>
    <div class="content">
        {{{contents}}}
            <div class="logo"></div>
            <div class="gitter-link"><a href="https://gitter.im/GuyMograbi/mograblog?utm_source=badge&utm_medium=badge&utm_campaign=pr-badge"><img src="https://badges.gitter.im/GuyMograbi/mograblog.svg"/></a></div>
            {{#each collections.articles}}
                <div class="entry">
                <!--{{!json .}}-->
                <h1><a href="{{path}}">{{ title }}</a></h1>
                <h3>{{moment published 'DD MMM YYYY' }}</h3>

                {{{excerpt}}}<a class="read-more" href="{{path}}">read more &#8594;</a>
                </div>
                <hr/>
            {{/each}}
        </div>

    </div>
    </div>
{{/content}}
{{/extend}}