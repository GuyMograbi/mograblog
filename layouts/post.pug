extend scaffold.pug

block body
    div.post
        div.head
            include about-me.pug
        a(href="/")
            div.logo
        div.currently-reading-wrapper
            div Visitors are also reading...
            div.currently-reading    
        div.content
            div
                if previous && previous.path
                    a(href=previous.path,title=previous.title) &#8592;  Previous
                if next && next.path
                    a(style="float:right", href=next.path, title=next.title) Next &#8594;
            h1.post-title #{title}
            h3
                span #{moment(published).format('DD MMM YYYY')}
                span.details
                    span.pageviews.icon-eye
                    span.likes
                span.gitter-link
                    a(href="https://gitter.im/GuyMograbi/mograblog")
                        img(src="https://badges.gitter.im/GuyMograbi/mograblog.svg")
                span.help-improve
                    a(href="https://github.com/GuyMograbi/mograblog/blob/master/src/" + filepath,target="_blank",title="help me improve this post with pull request")
                        img(src="https://img.shields.io/badge/improve-post-blue.svg")
            div !{contents}
            div.content    
                p
                    if previous && previous.path
                        a(href=previous.path, title=previous.title) &#8592;  Previous
                    if next && next.path
                        a(href=next.path, style="float:right", title=next.title) Next &#8594;
                div.push(style="height:100px")
            script(src="/bower_components/slug/slug.js")
            script(src="/scripts/mograblog-events.js")
            script(src="/scripts/mograblog-counter.js")
