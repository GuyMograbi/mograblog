extend scaffold.pug

block body
    div.feedback
      div.menu
        ul
          li Nice post, but not what I was looking for
          li Nice post, but a bit confusing
          li Nice post, but please improve your English 
          li Nice post, but not as interesting as I was hoping
          li Nice post! I liked it!
      div.thank-you
        i.icon-check 
        div Thank you very much for taking the time and giving me feedback.
        div.close close
        
      i.icon-thumbs-o-down
    div.post
        div.head
            include about-me.pug
        a(href="/")
            img.logo(src="/style/images/logo_transparent.png")
        div.currently-reading-wrapper
            div Visitors are also reading...
            div.currently-reading    
        div.content.first-content
            div.post-navigation
                if previous && previous.path
                    a(href=previous.path,title=previous.title) &#8592;  Previous
                if next && next.path
                    a(style="float:right", href=next.path, title=next.title) Next &#8594;
            h1.post-title #{title}
            h3
                span #{moment(published).format('DD MMM YYYY')}
                span.details
                    span.pageviews.icon-eye
                      span.pageviews-content
                    span.likes
                div.action-wrapper
                  span.gitter-link
                    a(href="https://gitter.im/GuyMograbi/mograblog")
                        img(src="https://badges.gitter.im/GuyMograbi/mograblog.svg")
                  span.help-improve
                    a(href="https://github.com/GuyMograbi/mograblog/blob/master/src/" + filepath,target="_blank",title="help me improve this post with pull request")
                        img(src="https://img.shields.io/badge/improve-post-blue.svg")
        if cover
          div.content
            div.cover-image 
              img(src=cover,title=coverTitle)                  
        div.content !{contents}
        div.content    
            p
                if previous && previous.path
                    a(href=previous.path, title=previous.title) &#8592;  Previous
                if next && next.path
                    a(href=next.path, style="float:right", title=next.title) Next &#8594;
            div.push(style="height:100px")
              script(src="https://sdk.amazonaws.com/js/aws-sdk-2.1.12.min.js")
            script(src="/bower_components/slug/slug.js")
            script(src="/scripts/bundle.js")
            
